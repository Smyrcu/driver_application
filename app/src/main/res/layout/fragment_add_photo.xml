<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/spacing_login"
    android:paddingBottom="@dimen/spacing_login"
    android:paddingEnd="@dimen/spacing_login"
    android:paddingStart="@dimen/spacing_login">

    <VideoView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/videoView"
        android:layout_marginTop="@dimen/spacing_above_login"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/videoText"
        android:textSize="20sp"
        android:hint=""
        android:paddingTop="@dimen/spacing_login"/>


    <ImageButton
        android:id="@+id/addVideoButton"
        android:layout_width="112dp"
        android:layout_height="89dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/spacing_login"
        app:srcCompat="@drawable/ic_add_photo"
        android:onClick="chooseVideo"/>

    <Button
        android:id="@+id/uploadButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/upload"
        android:layout_marginTop="@dimen/spacing_login"
        android:onClick="uploadVideo"/>

    <ProgressBar
        android:id="@+id/uploadProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_login"
        android:visibility="invisible"/>

</LinearLayout>
